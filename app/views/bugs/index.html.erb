<p id="notice"><%= notice %></p>

<h1>Bugs</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Types</th>
      <th>Status</th>
      <th>Project</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bugs.each do |bug| %>
      <tr>
        <td><%= bug.title %></td>
        <td><%= bug.description %></td>
        <td><%= bug.types %></td>
        <td><%= bug.status %></td>
        <td><%= bug.project.title %></td>
        <td><%= link_to 'Show Bug', project_bug_path(@project,bug) %></td>
        <td><%= link_to 'Edit Bug', edit_project_bug_path(@project,bug) %></td>
        <td><%= link_to 'Destroy Bug', [@project,bug], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Bug', new_project_bug_path %>
